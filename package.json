{
  "name": "check-note-app",
  "version": "1.0.0",
  "description": "作業チェックノートアプリ",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "electron-builder --publish=never",
    "pack": "electron-packager . 作業チェックノート --platform=win32 --arch=x64 --out=dist --overwrite"
  },
  "build": {
    "appId": "com.example.check-note-app",
    "productName": "作業チェックノート",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "dir"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tensyokuneko/check-note-app.git"
  },
  "keywords": [
    "electron",
    "checklist",
    "note"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tensyokuneko/check-note-app/issues"
  },
  "homepage": "https://github.com/tensyokuneko/check-note-app#readme",
  "devDependencies": {
    "electron": "^38.1.1",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "install": "^0.13.0"
  }
}
